@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <div class="ml-3 mud-typography mud-typography-h5">
            <MudNavLink Href="/">
                @Localizer["EventHorizon Games Studio Docs"]
            </MudNavLink>
        </div>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer> @Body </MudContainer>

        <PagePagination />
        
        <MudContainer>
            <footer style="text-align:center; padding: 3rem 0;">
                <div>@Localizer["All Rights Reserved"]</div>
                <div>
                    <MudLink Href="https://ehzgames.studio/privacy-policy">@Localizer["Privacy Policy"]</MudLink> |
                    <MudLink Href="https://ehzgames.studio/terms-of-service">@Localizer["Terms of Service"]</MudLink> |
                    <MudLink Href="mailto:mail+docs@ehzgames.studio">@Localizer["Contact Us"]</MudLink>
                </div>
            </footer>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject]
    public Localizer<SharedResource> Localizer { get; set; } =
    null!; bool _drawerOpen = true; void DrawerToggle()
    {
        _drawerOpen =
        !_drawerOpen;
    }
}
